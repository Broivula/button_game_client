<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="50dp"
            android:height="50dp"
            android:viewportWidth="100"
            android:viewportHeight="100">
            <group
                android:name="group"
                android:scaleX="0">
                <path
                    android:name="path"
                    android:pathData="M 50 70 L 87.714 90 L 71.714 50 L 12.286 50 Z"
                    android:fillColor="#DB826A"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_1"
                    android:pathData="M 50 30 L 12.286 50 L 71.714 50 L 87.714 10 Z"
                    android:fillColor="#C4745B"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator

                    android:propertyName="scaleX"
                    android:duration="500"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="500"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
